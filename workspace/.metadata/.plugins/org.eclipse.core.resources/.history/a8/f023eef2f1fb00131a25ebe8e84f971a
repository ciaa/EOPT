#include "ciaaAIN.h"

uint16_t current_in[4];

void ADC0_IRQHandler(void)
{
	if(ADC_ChannelGetStatus(LPC_ADC0, ADC_CHANNEL_1, 0)==SET)
	{
		current_in[0] = ADC_ChannelGetData(LPC_ADC0, ADC_CHANNEL_1);
	}
	if(ADC_ChannelGetStatus(LPC_ADC0, ADC_CHANNEL_2, 0)==SET)
	{
		current_in[1] = ADC_ChannelGetData(LPC_ADC0, ADC_CHANNEL_2);
	}
}

void ciaaAINInit(void)
{
	ADC_Init(LPC_ADC0, 200000, 10);

	ADC_ChannelCmd(LPC_ADC0, ADC_CHANNEL_1, ENABLE);
	ADC_ChannelCmd(LPC_ADC0, ADC_CHANNEL_2, ENABLE);

	ADC_IntConfig(LPC_ADC0, ADC_ADINTEN1, ENABLE);
	ADC_IntConfig(LPC_ADC0, ADC_ADINTEN2, ENABLE);

//	ADC_BurstCmd(LPC_ADC0, ENABLE);
	ADC_StartCmd(LPC_ADC0, ADC_START_CONTINUOUS);

	NVIC_EnableIRQ(ADC0_IRQn);
}

